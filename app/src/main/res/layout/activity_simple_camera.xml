<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.ui.simple_camera.SimpleCameraActivity">

    <ImageView
        android:id="@+id/cameraIv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/startCamera"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startCamera"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="打开相机"
        app:layout_constraintBottom_toTopOf="@id/saveBitmap" />
    <Button
        android:id="@+id/saveBitmap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="指定路径"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>